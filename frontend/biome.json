{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": true,
      "style": {
        "quotes": {
          "style": "double"
        },
        "semi": {
          "style": "always"
        },
        "indent": {
          "style": "space",
          "size": 2
        },
        "jsx-quote-style": "prefer-double"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "quoteStyle": "double",
    "trailingComma": "none",
    "jsxQuoteStyle": "double"
  },
  "organizeImports": true
}