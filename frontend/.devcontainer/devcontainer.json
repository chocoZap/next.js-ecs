{
  "name": "Next.js Dev Container",
  "dockerFile": "../docker/Dockerfile.dev",
  "context": "..",
  "appPort": [3000],
  "forwardPorts": [3000],
  "postCreateCommand": "pnpm install",
  "remoteUser": "node",
  "customizations": {
  "vscode": {
      "extensions": [
      "biomejs.biome"
      ]
  }
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/app,type=bind,consistency=cached"
  ]
}